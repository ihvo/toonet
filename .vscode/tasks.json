{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/TooNet.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-release",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/TooNet.sln",
        "-c",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/TooNet.sln"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test-with-coverage",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/TooNet.sln",
        "--collect:\"XPlat Code Coverage\""
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/TooNet.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "restore",
      "command": "dotnet",
      "type": "process",
      "args": [
        "restore",
        "${workspaceFolder}/TooNet.sln"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-benchmarks",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "-c",
        "Release",
        "--project",
        "${workspaceFolder}/benchmarks/TooNet.Benchmarks/TooNet.Benchmarks.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run-benchmarks-quick",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "-c",
        "Release",
        "--project",
        "${workspaceFolder}/benchmarks/TooNet.Benchmarks/TooNet.Benchmarks.csproj",
        "--",
        "--quick"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/TooNet/TooNet.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    }
  ]
}